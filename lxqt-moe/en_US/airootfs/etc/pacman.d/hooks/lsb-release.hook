# remove from airootfs!
[Trigger]
Operation = Install
Operation = Upgrade
Type = Package
Target = lsb-release

[Action]
Description = Generating lsb-release...
When = PostTransaction
Exec = /bin/sh -c "sed -i -e 's,DISTRIB_ID=.*,DISTRIB_ID=Moevalent,' -e 's,DISTRIB_RELEASE=.*,DISTRIB_RELEASE=Rolling,' -e 's,DISTRIB_CODENAME=.*,DISTRIB_CODENAME=Akweego,' -e 's,DISTRIB_DESCRIPTION=.*,DISTRIB_DESCRIPTION=\"Moevalent GNU/Linux\",' /etc/lsb-release"
