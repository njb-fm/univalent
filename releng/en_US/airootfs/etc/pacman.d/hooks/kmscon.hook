# remove from airootfs!
[Trigger]
Operation = Install
Type = Package
Target = kmscon

[Action]
Description = Enabling KMSCON...
When = PostTransaction
Depends = kmscon
Exec = /bin/sh -c "systemctl disable getty@tty1 && systemctl enable kmsconvt@tty1 && ln -s /usr/lib/systemd/system/kmsconvt@.service /etc/systemd/system/autovt.service"
