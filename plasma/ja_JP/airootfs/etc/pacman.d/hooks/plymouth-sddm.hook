# remove from airootfs!
[Trigger]
Operation = Install
Type = Package
Target = plymouth
Target = sddm

[Action]
Description = Enabling plymouth...
When = PostTransaction
Depends = plymouth
Depends = update-grub
Depends = sddm
Exec = /bin/sh -c "plymouth-set-default-theme -R uvgl-logo && systemctl enable sddm-plymouth.service"
