# remove from airootfs!
[Trigger]
Operation = Install
Operation = Upgrade
Type = Package
Target = filesystem

[Action]
Description = Generating os-release file...
When = PostTransaction
Exec = /bin/sh -c "sed -i -e 's,NAME=.*,NAME=\"Univalent GNU/Linux\",' -e 's,PRETTY_NAME=.*,PRETTY_NAME=\"Univalent GNU/Linux\",' -e 's,ID=.*,ID=univalent,' -e 's,ID_LIKE=.*,ID_LIKE=arch,' -e 's,BUILD_ID=.*,BUILD_ID=rolling,' -e 's,HOME_URL=.*,HOME_URL=\"https://osdn.net/projects/univalentgnulinux\",' -e 's,DOCUMENTATION_URL=.*,DOCUMENTATION_URL=\"https://osdn.net/projects/univalentgnulinux/wikiFrontPage\",' -e 's,SUPPORT_URL=.*,SUPPORT_URL=\"https://osdn.net/projects/univalentgnulinux/forums\",' -e 's,BUG_REPORT_URL=.*,BUG_REPORT_URL=\"https://osdn.net/projects/univalentgnulinux/forums\",' -e 's,LOGO=.*,LOGO=univalent,' /usr/lib/os-release"
