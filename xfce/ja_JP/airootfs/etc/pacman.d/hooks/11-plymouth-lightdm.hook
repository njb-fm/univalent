# remove from airootfs!
[Trigger]
Operation = Install
Type = Package
Target = plymouth
Target = lightdm

[Action]
Description = Enabling plymouth...
When = PostTransaction
Depends = plymouth
Depends = update-grub
Depends = lightdm
Exec = /bin/sh -c "plymouth-set-default-theme -R uvgl-logo && systemctl enable lightdm-plymouth.service"
